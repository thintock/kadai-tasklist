<!DOCTYPE html>
<html>
  <head>
    <title>Tasklist</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    <ul>
      <li><%= link_to"トップページ", root_path %></li>
      <li><%= link_to"ユーザー一覧",users_path %></li>
      <li><%= link_to"タスク一覧",tasks_path %></li>
      
      <% if logged_in? %>
        <li><%= link_to "Users", users_path %>
          <%= current_user.name %>
          <%= link_to "My profile", user_path(current_user) %></li>
        <li><%= link_to 'ログアウト', session_path(current_user), method: :delete %></li>
      <% else %>
      <li><%= link_to "サインアップ", new_user_path %></li>
      <li><%= link_to "ログイン", new_session_path %></li>
      <% end %>
    </ul>
    <%= render "layouts/flash_messages" %>
    
    <%= yield %>
  </body>
</html>
