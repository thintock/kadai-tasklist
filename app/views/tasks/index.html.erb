<h1>タスク一覧</h1>

<% if logged_in? %>
  <h2>ログイン完了ユーザー： <%= current_user.name %></h2>
  <table border="1">
    <tr>
      <th>タスクID</th>
      <th>ユーザー名</th>
      <th>タスク</th>
      <th>ステータス</th>
    </tr>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= link_to task.id, task %></td>
      <td><%= task.user.name %></td>
      <td><%= task.content %></td>
      <td><%= task.status %></td>
    </tr>
  <% end %>
  </table>
  <%= link_to "新規タスクの作成", new_task_path %>
<% else %>
  <h2>ようこそタスクアプリへ</h2>
  <%= link_to "Sign up now!", new_user_path %>
<% end %>